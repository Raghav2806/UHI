<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sign Up</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="/styles/index.css" />
  <title>Form</title>
</head>
<body>
  <div id="step1" class="contain">
    <form id="contactNumberForm" action="/patientFormTwo" method="post">
        <div class="mb-3 form-floating">
          <input type="text" class="form-control" id="contactNumber" placeholder="Contact Number" name="contactNumber" required/>
          <label for="contactNumberInput" class="form-label">Contact Number</label>
        </div>
        <button type="submit" class="btn btn-danger">Next</button>
    </form>
  </div>

  
  <script>
    document.getElementById('contactNumberForm').addEventListener('submit', function(event) {
      const contactNumber = document.getElementById('contactNumber').value;
      document.getElementById('hiddencontactNumber').value = contactNumber;
      document.getElementById('step1').style.display = 'none';
      document.getElementById('step2').style.display = 'flex';
    });

  </script>
</body>
</html>