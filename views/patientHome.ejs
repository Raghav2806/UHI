<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/index.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Show Prescriptions</h1>
        
        <div class="row">
            <div class="col-md-4 mb-3">
                <select id="firstDropdown" class="form-select">
                    <option selected>Choose an option</option>
                    <!-- Options will be dynamically populated -->
                </select>
            </div>
            
            <div class="col-md-4 mb-3">
                <select id="secondDropdown" class="form-select" disabled>
                    <option selected>Select second option</option>
                    <!-- Options will be populated based on first dropdown -->
                </select>
            </div>
            
            <div class="col-md-4 mb-3">
                <select id="thirdDropdown" class="form-select" disabled>
                    <option selected>Select third option</option>
                    <!-- Options will be populated based on second dropdown -->
                </select>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        let inputData = {};
        <% if (input2) { %>
            inputData = <%- JSON.stringify(input2) %>;
        <% } %>
        console.log('inputData:', inputData);

        function populateFirstDropdown() {
            const dropdown = document.getElementById('firstDropdown');
            const values = Object.values(inputData);
            
            for (let i = 0; i < values.length; i++) {
                const option = document.createElement('option');
                option.value = i;  // Use index as value
                option.textContent = values[i];  // Use the value at this index as text
                dropdown.appendChild(option);
            }
        }

        document.getElementById('firstDropdown').addEventListener('change', function() {
            const secondDropdown = document.getElementById('secondDropdown');
            secondDropdown.disabled = false;
            // Populate second dropdown based on first dropdown selection
            // You'll need to implement this logic
        });

        document.getElementById('secondDropdown').addEventListener('change', function() {
            const thirdDropdown = document.getElementById('thirdDropdown');
            thirdDropdown.disabled = false;
            // Populate third dropdown based on second dropdown selection
            // You'll need to implement this logic
        });

        window.onload = function() {
            populateFirstDropdown();
        };
    </script>
</body>
</html>